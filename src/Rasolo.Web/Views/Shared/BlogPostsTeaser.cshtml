@model IEnumerable<Rasolo.Web.Features.BlogPostPage.BlogPostPage>

@if (Model != null && Model.Any())
{
	<div class="posts-container">
		<h2 class="posts-container__heading">Latest posts</h2>
		<div class="posts-container__posts">
			@{
				foreach (var blogPostPage in Model)
				{
					 @(await Html.PartialAsync("BlogPostTeaser", blogPostPage))
				}
			}
		</div>
		<div class="posts-container__load-more-container">
			<div class="posts-container__load-more-container__text">
			Load more
			</div>
		</div>
		<div class="spacer"></div>
	</div>
}