@model Rasolo.Web.Features.Shared.Compositions.BaseContentPage
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta name="og:type" content="website" />

@if (!string.IsNullOrEmpty(Model.MetaDescription))
{
	<meta name="description" content="@(Model.MetaDescription)" />
}
@if (Model.Url != null)
{
	@*<meta name="og:url" content="@Request.Url.Host@Model.Url" />*@
}

@if (!string.IsNullOrEmpty(Model.PageAndSiteTitle))
{
	<meta name="application-name" content="@Model.PageAndSiteTitle">
}

