@using Umbraco.Extensions
@model Rasolo.Web.Features.BlogPostPage.BlogPostPage
<div class="blogpost">
	<div class="blogpost__top">
		<p class="blogpost__breadcrumb">
			@{
				var breadCrumbs = Model.BreadCrumbs.ToList();
				for (var i = 0; i < breadCrumbs.Count; i++)
				{
					if (i == 0)
					{
						<a href="@breadCrumbs[i].Url">@breadCrumbs[i].Name</a>
					}
					else
					{
						<a href="@breadCrumbs[i].Url">| @breadCrumbs[i].Name</a>
					}
				}
			}

		</p>
		<p class="blogpost__date-created">@Model.CreateDate.ToString("yyyy-MM-dd")</p>
		<p class="blogpost__category">
			<a href="@Model.Parent.Url()">@Model.Parent.Name</a>
		</p>
		<h1>@Model.Title</h1>
	</div>
	<div class="blogpost__content">
		@Model.MainBody
	</div>

